{
    "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 10240,
      "guest_os_type": "RedHat_64",
      "http_directory": "http",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "sha1",
       "iso_urls": [
        "{{ user `iso_path` }}/{{ user `iso_name` }}",
        "{{ user `iso_url` }}"
      ],
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "512" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "1" ]
      ]
    },
    {
      "type": "vmware-iso",
      "boot_command": [
        "<tab>",
        " text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg ",
        "HOSTNAME={{user `hostname`}} ",
        "<enter><wait><wait><wait><esc>"
      ],
      "boot_wait": "15s",
      "disk_size": 10240,
      "disk_type_id": "thin",
      "guest_os_type": "centos-64",
      "http_directory": "http",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "sha1",
       "iso_urls": [
        "{{ user `iso_path` }}/{{ user `iso_name` }}",
        "{{ user `iso_url` }}"
      ],
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "remote_type": "{{user `esxi_type`}}",
      "remote_host": "{{user `esxi_host`}}",
      "remote_datastore": "{{user `esxi_datastore`}}",
      "remote_username": "{{user `esxi_username`}}",
      "remote_password": "{{user `esxi_password`}}",
      "keep_registered": true,
      "vnc_disable_password": true,
      "skip_export": true,
      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
      "tools_upload_flavor": "",
      "vm_name": "{{user `hostname`}}",
      "vmdk_name": "{{user `hostname`}}",
      "output_directory": "{{user `hostname`}}",
      "vnc_disable_password": true,
      "vmx_data": {
        "memsize": "1024",
        "numvcpus": "1",
        "cpuid.coresPerSocket": "1",
        "ethernet0.networkName": "{{user `network`}}"
      }
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "expect_disconnect": true,
      "environment_vars": [
        "CM={{user `cm`}}",
        "CM_VERSION={{user `cm_version`}}",
        "UPDATE={{user `update`}}",
        "INSTALL_VAGRANT_KEY={{user `install_vagrant_key`}}",
        "SSH_USERNAME={{user `ssh_username`}}",
        "SSH_PASSWORD={{user `ssh_password`}}",
        "e_iface={{user `iface`}}",
        "e_ip_cidr={{user `ip_cidr`}}",
        "e_gateway={{user `gateway`}}",
        "e_nameservers={{user `nameservers`}}",
        "e_domain={{user `domain`}}"
          ],
      "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
      "expect_disconnect": true,
      "override": {
        "virtualbox-iso": {
          "scripts": [
            "scripts/fix-slow-dns.sh",
            "scripts/sshd.sh",
            "scripts/update.sh",
            "scripts/base.sh",
            "scripts/vagrant.sh",
            "scripts/virtualbox.sh",
            "scripts/custom.sh",
            "scripts/cleanup.sh"
          ]
        },
        "vmware-iso": {
          "scripts": [
            "scripts/fix-slow-dns.sh",
            "scripts/sshd.sh",
            "scripts/update.sh",
            "scripts/base.sh",
            "scripts/vagrant.sh",
            "scripts/vmware.sh",
            "scripts/custom.sh",
            "scripts/cleanup.sh",
            "scripts/change_network_settings.sh"
          ]
        }
      }
    },
    
    {
    "type": "shell",
    "inline": [ "sleep 1" ],
    "expect_disconnect": true
    }
  ],
  
  "variables": {
    "cm": "nocm",
    "cm_version": "",
    "headless": "",
    "install_vagrant_key": "true",
    "iso_checksum": "783eef50e1fb91c78901d0421d8114a29b998478",
    "iso_name": "CentOS-7-x86_64-Minimal-1511.iso",
    "iso_path": "iso",
    "iso_url": "http://www.fedora.is/CentOS/7/isos/x86_64/CentOS-7-x86_64-Minimal-1511.iso",
    "ssh_password": "vagrant",
    "ssh_username": "vagrant",
    "update": "true"
  }

}
